<div class="span6">
  <%= form_for [ :accounts, @account ] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :tag_list, 'Group(s)' %>
    <%= f.text_field :tag_list %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :comments %>
    <%= f.text_area :comments, :rows => 5 %>

    <hr><button type="submit" class="btn"><%= @account.new_record? ? 'Create' : 'Update' %> Account</button></hr>
  <% end %>
</div>

<% if GenericAccount.tags.empty? %>
  <p class="muted">No groups yet..</p>
<% else %>
  <div class="span3 offset3">
    <p class="muted">Groups:</p>
    <ul class="unstyled">
      <% GenericAccount.tags.each do |tag| %>
        <li class="muted"><%= "#{tag}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
