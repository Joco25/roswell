<div class="page-header">
  <h3>
    <% if @tag %>
      Generic Accounts tagged with &ldquo;<%= @tag %>&rdquo;
    <% else %>
      Generic Accounts
    <% end %>
    <%= link_to 'New Account', new_accounts_generic_account_path, :class => 'btn btn-small pull-right' %>
  </h3>
</div>

<div class="row">
  <div class="span2">
    <ul class="well nav nav nav-list">
      <li class="nav-header">Groups</li>
      <% allowed_tags_for(:generic_accounts).each do |tag| %>
        <li <%= active_class_if(accounts_tagged_generic_path(:tag => tag)) %> ><%= link_to "#{tag}", accounts_tagged_generic_path(:tag => tag) %></li>
      <% end %>
    </ul>
  </div>

<div class="span10">
<div id='accounts'>
  <table class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th class='title'>Title</th>
        <th class='username'>Username</th>
        <th class='password'>Password</th>
        <th class='actions'>Details</th>
      </tr>
    </thead>
    <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.title %></td>
        <td><%= account.username %></td>
        <td><%= account.password %></td>
        <td><%= link_to 'View', accounts_generic_account_path(account) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
