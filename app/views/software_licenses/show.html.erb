<div class='page-header'>
  <h2>
    <%= @license.title %>
    <% if @license.tags.present? %><small><%= @license.tags.join(' ') %></small><% end %>
    <%= link_to 'Edit', edit_software_license_path, :class=> 'btn btn-small pull-right' %>
  </h2>
</div>

<dl>
  <dt>Title</dt>
  <dd><%= @license.title %></dd>
  <p></p>
  <dt>Key</dt>
  <dd><%= @license.license_key %></dd>
  <p></p>
  <dt>Licensed to</dt>
  <dd><%= @license.licensed_to %></dd>
  <p></p>
  <dt>Created</dt>
  <dd><%= fmt_datetime(@license.created_at) %></dd>
  <p></p>
  <dt>Updated</dt>
  <dd><%= fmt_datetime(@license.updated_at) %></dd>
  <p></p>
  <dt>Comments</dt>
  <dd><%= @license.comments %></dd>
</dl>