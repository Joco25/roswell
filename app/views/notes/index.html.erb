<div id='notes'>
  <table class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th class='title'>Title</th>
        <th class='created_at'>Created</th>
        <th class='updated_at'>Updated</th>
      </tr>
    </thead>
    <tbody>
    <% @notes.each do |note| %>
      <tr class='<%= cycle('even', 'odd') %>'>
        <td><%= note.title %></td>
        <td><%= fmt_datetime(note.created_at) %></td>
        <td><%= fmt_datetime(note.updated_at) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
