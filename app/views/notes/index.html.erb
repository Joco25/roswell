<div class="page-header">
  <h3><%= (params[:tag]) %> Notes</h3>
</div>

<div class="row">
  <div class="span2">
    <ul class="well nav nav-list">
      <li class="nav-header">Groups</li>
      <% allowed_tags_for(:notes).each do |tag| %>
        <li <%= active_class_if(tagged_notes_path(:tag => tag)) %> ><%= link_to_with_selected "#{tag}", tagged_notes_path(:tag => tag) %></li>
      <% end %>
    </ul>
  </div
</div>

<div class="span10">
<div id='notes'>
  <table class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th class='title'>Title</th>
        <th class='actions'>Message</th>
        <th class='created_at'>Created</th>
        <th class='updated_at'>Updated</th>
      </tr>
    </thead>
    <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= link_to 'View', note_path(note) %></td>
        <td><%= fmt_datetime(note.created_at) %></td>
        <td><%= fmt_datetime(note.updated_at) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
